@page "{handler?}"
@model Top10Movies_RazorPages.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div>
    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <h3>Топ Фильмов</h3>
    @foreach (var m in Model.Movie)
    {
        <div id="main">
            <div id="poster"><img src=@m.Poster /></div>
            <div id="content">

                <h2>@m.Title</h2>
                <label>Режисер: @m.Director</label><br />
                <label>Жанр: @m.Genre</label><br />
                <label>Год: @m.Year</label><br />
                <p>Описание: @m.Description</p>

                <a asp-action="Edit" asp-route-id="@m.Id">Редактирование</a> |
                <a asp-action="Details" asp-route-id="@m.Id">Подробности</a> |
                <a asp-action="Delete" asp-route-id="@m.Id">Удаление</a>
            </div>



        </div>
    }
</div>